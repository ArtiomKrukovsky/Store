@model IEnumerable<Store.Domain.Models.Country>

@{
    ViewBag.Title = "Страны";
}
@Styles.Render("~/Content/TableStyle.css")
<h2>Список стран</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CountryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Continent_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CountryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Continent_Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.CountryId }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.CountryId })
        </td>
    </tr>
}

</table>
